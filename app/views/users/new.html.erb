<h1>Sign up</h1>

<%= form_with model: @user, id: :user_new_form, local: true do |f| %>
    <div class="field">
        <%= f.label :name, "User Name", class: "field_label" %>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :password, "Password", class: "field_label" %>
        <%= f.password_field :password %>
    </div>

    <div class="field">
        <%= f.label :password_confirmation, "Password Confirmation", class: "field_label" %>
        <%= f.password_field :password_confirmation %>
    </div>

    <%= f.submit "登録" %>
<% end %>