<h1>Log in</h1>

<%= form_with scope: :session, local: true do |f| %>
    <div class="field">
        <%= f.label :name, "User Name", class: "field_label" %>
        <%= f.text_field :name %>
    </div>

    <div class="field">
        <%= f.label :password, "Password", class: "field_label" %>
        <%= f.password_field :password %>
    </div>

    <%= f.submit "Log in" %>
<% end %>